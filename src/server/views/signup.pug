doctype html
html
    head
        script(src="/noauth/signup.js")
        link(href="/noauth/main.css" rel="stylesheet")
        title HexEditor
    body
        div(id="auth-form")
            h1 Sign up for HexEditor
            form(action="/signup" method="post" data-csrftoken=csrftoken)
                section(class="input-sec")
                    label(for="username") Username
                    div
                        input(id="username" name="username" minlength="1" maxlength="25" required)
                section(class="input-sec")
                    label(for="password") Password
                    div
                        input(id="password" name="password" type="password" minlength="12"
                            maxlength="100" required)
                section(class="input-sec")
                    label Retype password
                    div
                        input(id="password2" type="password" minlength="12" maxlength="100")
                button Sign up
            div(class="requirements")
                p Your username must meet the following requirements:
                ul
                    li At least 1 character in length
                    li At most 25 characters in length
                    li Preferrably similar to your Discord username
                p Your password must meet the following requirements:
                ul
                    li At least 12 characters in length
                    li No more than 100 characters in length
                    li Contains at least 1 lowercase letter
                    li Contains at least 1 uppercase letter